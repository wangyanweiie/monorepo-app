{
    "name": "@custom/template",
    "version": "1.0.0",
    "description": "monorepo-app-template",
    "private": true,
    "scripts": {
        "dev": "vite --host",
        "build": "vue-tsc --noEmit && vite build",
        "build:test": "vue-tsc --noEmit && vite build --mode test",
        "serve": "vite preview",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .eslintignore",
        "format": "prettier --write src/",
        "write-api": "tsc ./script/generate-api/get-api-docs.ts --skipLibCheck && node ./script/generate-api/get-api-docs.js && npx prettier -w ./src/json/api.json",
        "prettier-api": "npx prettier -w ./src/api",
        "generate-api": "cd ./script/generate-api && npx openapi-generator-cli generate -c ./openapitools.json --generator-key v2.0",
        "rewrite-api": "pnpm write-api & pnpm generate-api"
    },
    "author": "wyw",
    "license": "ISC",
    "dependencies": {
        "@custom/components": "workspace:*",
        "@custom/utils": "workspace:*",
        "@element-plus/icons-vue": "^2.1.0",
        "@hapi/formula": "^3.0.2",
        "axios": "^1.5.0",
        "dayjs": "^1.11.9",
        "echarts": "^5.4.3",
        "element-plus": "^2.3.12",
        "lodash-es": "^4.17.21",
        "mitt": "^3.0.1",
        "pinia": "^2.1.6",
        "store2": "^2.14.2",
        "terser": "^5.19.4",
        "vue": "^3.3.4",
        "vue-router": "^4.2.4",
        "vuedraggable": "^4.1.0"
    },
    "devDependencies": {
        "@custom/eslint-config": "workspace:*",
        "@iconify-json/ep": "^1.1.12",
        "@openapitools/openapi-generator-cli": "^2.7.0",
        "@types/lodash-es": "^4.17.9",
        "@types/node": "^20.6.0",
        "@vitejs/plugin-legacy": "^4.1.1",
        "@vitejs/plugin-vue": "^4.3.4",
        "@vue/tsconfig": "^0.4.0",
        "eslint": "^8.49.0",
        "postcss": "^8.4.29",
        "rollup-plugin-visualizer": "^5.9.2",
        "sass": "^1.67.0",
        "typescript": "^5.2.2",
        "unplugin-auto-import": "^0.16.6",
        "unplugin-icons": "^0.17.0",
        "unplugin-vue-components": "^0.25.2",
        "vite": "^4.4.9",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-inspect": "^0.7.38",
        "vite-plugin-vue-devtools": "1.0.0-rc.4",
        "vue-tsc": "^1.8.11"
    }
}
